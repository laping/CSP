{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3 mt-4">
                <h1 class="text-center">Connectez vous !</h1>

                {% if hasErreur %}
                    <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide !</div>
                {% endif %}

                <form action="{{path('compte_connexion')}}" method="POST">
                    <div class="form-group">
                        <label for="nom">Nom</label>
                        <input type="text" name="_username" id="nom" class="form-control" placeholder="Nom..." required value="{{nom_utilisateur}}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe..." required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
