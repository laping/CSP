{% extends "base.html.twig" %}

{% block title %}Editer un message{% endblock %}

{% block body %}
{% if message.auteur.id == app.user.id %}
    
<div class="container">
    <h1 class="text-center">Editer le message</h1>
    
    
    {{form_start(form)}}
    {{form_widget(form)}}
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
    {{form_end(form)}}
    
</div>
{% else %}
<p> Ce message ne vous appartient pas !</p>
{% endif %}

{% endblock body %}