{% extends "base.html.twig" %}

{% block title %}Liste des systèmes{% endblock title %}

{% block body %}

<div class="container mt-5">
    <div class="text-center mt-5">
        <a href="{{path('systeme_creer')}}" class="btn btn-success">Nouveau système</a>  
    </div>
    <div class="table-responsive">
        <table id="table_systeme" class="table-bordered table-striped">
            <thead>
                <tr style="background-color: #a1d3ed">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>

            {% for systeme in systemes %}
                
            <tr>
                <th>{{systeme.id}}</th>
                <th>{{systeme.nom}}</th>
                <th><a href="{{path('systeme_editer', {'id': systeme.id}) }}"><i class="fas fa-wrench"></i></a></th>
                <th><a data-toggle="modal"   data-target="#supprimer-{{ systeme.id }}"><i class="fas fa-trash-alt"></i></a></th>
            </tr>
            <div class="modal fade" id="supprimer-{{ systeme.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Suppression d'un élément</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Voulez vous supprimer cet élément ?</p> 
                    </div>
                    <div class="modal-footer">
                        <a  type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</a>
                        <a href="{{path('systeme_supprimer', {'id': systeme.id}) }}" type="button" class="btn btn-primary">Confirmer</a>
                    </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready( function () {
        $('#table_systeme').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
            }
        });
    } );
</script>
{% endblock body %}