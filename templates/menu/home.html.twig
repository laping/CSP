{% extends "base.html.twig" %}

{% block body %}

  <form  target="_blank" method="get" action="http://www.google.fr/search">
      <div id="google" class="mt-5">
        <div id="logo_google">
          <img src="{{ asset('assets/img/logo_google.png') }}" alt="">
        </div>
        <table id="google-tab" border="0" align="center" cellpadding="0">
          <tr>
            <td id="google_search">
              <input type="text"   name="q" size="30" style="color:#808080;"
              maxlength="255" value="Recherche Google"
              onfocus="if(this.value==this.defaultValue)this.value=''; this.style.color='black';" onblur="if(this.value=='')this.value=this.defaultValue; "/>
              <input type="submit" value="Rechercher" size="15" />
              <input type="hidden" name="sitesearch" value="" />
            </td>
          </tr>
        </table>
      </div>
    </form> 
 

      
{% endblock body %}